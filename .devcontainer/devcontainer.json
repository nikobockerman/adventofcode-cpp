{
  "name": "C++ using conan by poetry",
  "image": "mcr.microsoft.com/devcontainers/cpp:bookworm",
  "containerEnv": {
    "POETRY_VIRTUALENVS_IN_PROJECT": "true"
  },
  "features": {
    "ghcr.io/devcontainers/features/python:latest": {
      "toolsToInstall": "poetry"
    },
    "ghcr.io/marcozac/devcontainer-features/shellcheck:latest": {},
    "./features/conan-persistent-package-cache": {},
    "./features/poetry-persistent-cache": {}
  },
  "onCreateCommand": "sh .devcontainer/onCreate.sh",
  "postStartCommand": "sh .devcontainer/postStart.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "timonwong.shellcheck"
      ]
    }
  }
}
